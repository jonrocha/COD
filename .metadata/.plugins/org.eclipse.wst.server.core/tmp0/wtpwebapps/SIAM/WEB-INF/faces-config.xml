<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
					http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0"> 

	<!-- Facelets -->
	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>en_US</supported-locale>
			<supported-locale>es_ES</supported-locale>
			<supported-locale>pt_BR</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>financeiro.idioma.mensagens</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>
	<managed-bean>
		<managed-bean-name>orcamentoBean</managed-bean-name>
		<managed-bean-class>financeiro.web.OrcamentoBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>categoriaBean</property-name>
			<value>#{categoriaBean}</value>
		</managed-property>
		<managed-property>
			<property-name>contextoMB</property-name>
			<value>#{contextoMB}</value>
		</managed-property>
	</managed-bean>
</faces-config>